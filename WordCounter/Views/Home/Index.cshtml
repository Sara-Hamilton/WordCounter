@{
  Layout = "_Layout";
}

<h1>Enter a word and a phrase to find out how many times the word is in the phrase.</h1>
<form action="/" method="post">
  <div class="form-group">
    <label for="input-word">Word: </label>
    <input class="form-control" type="text" name="input-word">
    <div class="error">@Html.Raw(@Model)</div>
  </div>
  <div class="form-group">
    <label for="input-string">Phrase: </label>
    <input class="form-control" type="text" name="input-string">
    <div class="error">@Html.Raw(@Model)</div>
  </div>
  <button type="submit" class="btn btn-primary" name="button">Submit</button>
</form>
